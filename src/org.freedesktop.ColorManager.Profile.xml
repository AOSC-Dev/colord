<!DOCTYPE node PUBLIC
'-//freedesktop//DTD D-BUS Object Introspection 1.0//EN'
'http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd'>
<node>
  <interface name='org.freedesktop.ColorManager.Profile'>
    <doc:doc>
      <doc:description>
        <doc:para>
          The interface used for quering color profiles.
        </doc:para>
      </doc:description>
    </doc:doc>

    <!--*****************************************************************************************-->
    <property name='ProfileId' type='s' access='read'>
      <doc:doc>
        <doc:description>
          <doc:para>
            The identification hash of the profile.
          </doc:para>
        </doc:description>
      </doc:doc>
    </property>

    <!--*****************************************************************************************-->
    <property name='Title' type='s' access='read'>
      <doc:doc>
        <doc:description>
          <doc:para>
            The printable title for the profile.
          </doc:para>
        </doc:description>
      </doc:doc>
    </property>

    <!--*****************************************************************************************-->
    <property name='Qualifier' type='s' access='read'>
      <doc:doc>
        <doc:description>
          <doc:para>
            The qualifier for the profile.
            A qualifier is used as a way to select a profile for a device.
            This might be something free text like "High quality studio' or
            something more programmable like "RGB.Plain.300dpi"
          </doc:para>
        </doc:description>
      </doc:doc>
    </property>

    <!--*****************************************************************************************-->
    <property name='Filename' type='s' access='read'>
      <doc:doc>
        <doc:description>
          <doc:para>
            The profile filename, if one exists.
          </doc:para>
        </doc:description>
      </doc:doc>
    </property>

    <!--*****************************************************************************************-->
    <method name='SetFilename'>
      <annotation name='org.freedesktop.DBus.GLib.Async' value=''/>
      <doc:doc>
        <doc:description>
          <doc:para>
            Sets the ICC profile filename for the device.
            This method will also parse the ICC profile, and set the
            title on this object.
          </doc:para>
        </doc:description>
      </doc:doc>
      <arg type='s' name='filename' direction='in'>
        <doc:doc>
          <doc:summary>
            <doc:para>
              The fully qualified filename of the profile.
            </doc:para>
          </doc:summary>
        </doc:doc>
      </arg>
    </method>

    <!--*****************************************************************************************-->
    <method name='SetQualifier'>
      <annotation name='org.freedesktop.DBus.GLib.Async' value=''/>
      <doc:doc>
        <doc:description>
          <doc:para>
            Sets the qualifier for the profile.
          </doc:para>
        </doc:description>
      </doc:doc>
      <arg type='s' name='qualifier' direction='in'>
        <doc:doc>
          <doc:summary>
            <doc:para>
              The profile qualifier, e.g. "RGB.Plain".
            </doc:para>
          </doc:summary>
        </doc:doc>
      </arg>
    </method>

    <!-- ************************************************************ -->
    <signal name='Changed'>
      <doc:doc>
        <doc:description>
          <doc:para>
            Some value on the interface has changed.
          </doc:para>
        </doc:description>
      </doc:doc>
    </signal>

  </interface>
</node>
